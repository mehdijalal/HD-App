@model IEnumerable<ICTCR.ViewModels.SupportTypeVM>

@{
    ViewBag.Title = "Index";
}
<div id="page">
    <!-- page content -->
    <div class="right_col" role="main">
        <div class="clearfix"></div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">

                    @Html.ActionLink("Add New Item", "Create", "SupportTypes", null, new { @class = "btn btn-danger" })

                    <a class="btn btn-success" style="float:right!important">Generate Report</a>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <!--<p>
                       <a href="#" class="btn btn-primary">Book a Car</a>
                    </p>-->
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.SupportName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CostPerSupport)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Minutes)
                                </th>
                                <th>
                                    Time to Action
                                </th>

                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupportName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CostPerSupport)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Minutes)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TimeToAction) - @Html.DisplayFor(modelItem => item.DateTimeName)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
